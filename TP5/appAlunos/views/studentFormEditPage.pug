extends  layout 

block content 
    .w3-card-4 
        header.w3-container.w3-purple 
            h2 Student Form 

        form.w3-container(method="POST")
            fieldset 
                legend Metadata 
                label Id
                input.w3-input.w3-round(type="text", name="id", required, value=aluno.id, readonly)
                label Name 
                input.w3-input.w3-round(type="text", name="nome", required, value=aluno.nome)
                label GitLink
                input.w3-input.w3-round(type="text", name="gitlink", required, value=aluno.gitlink)
            fieldset 
            legend TPC 
            - for (let i = 1; i <= 8; i++)
                label(for="tpc#{i}") TPC#{i} 
                input.w3-check(type="checkbox", value="1", name="tpc#{i}", checked=aluno["tpc" + i] == 1 ? "checked" : "")
                
            br
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Registar

        footer.w3-container.w3-purple
            h5 
                span Generated by EngWeb2024 in #{date} [
                a(href="/") Return
                span ]
                