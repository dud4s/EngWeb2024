extends  layout 

block content 
    .w3-card-4 
        header.w3-container.w3-purple 
            h2 Student Form 

        form.w3-container(method="POST")
            fieldset 
                legend Metadata 
                label Id
                input.w3-input.w3-round(type="text", name="id", required)
                label Name 
                input.w3-input.w3-round(type="text", name="nome", required)
                label GitLink
                input.w3-input.w3-round(type="text", name="gitlink", required)
            fieldset 
                legend TPC 
                label(for="tpc1") TPC1 
                input.w3-check(type="checkbox", value="1", name="tpc1")
                label(for="tpc2") TPC2 
                input.w3-check(type="checkbox", value="1", name="tpc2")
                label(for="tpc3") TPC3 
                input.w3-check(type="checkbox", value="1", name="tpc3")
                label(for="tpc4") TPC4 
                input.w3-check(type="checkbox", value="1", name="tpc4")
                label(for="tpc5") TPC5 
                input.w3-check(type="checkbox", value="1", name="tpc5")
                label(for="tpc6") TPC6 
                input.w3-check(type="checkbox", value="1", name="tpc6")
                label(for="tpc7") TPC7 
                input.w3-check(type="checkbox", value="1", name="tpc7")
                label(for="tpc8") TPC8 
                input.w3-check(type="checkbox", value="1", name="tpc8")
            br
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Registar

        footer.w3-container.w3-purple
            h5 
                span Generated by EngWeb2024 in #{date} [
                a(href="/") Return
                span ]
                