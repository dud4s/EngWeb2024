extends layout 

block content 
    .w3-card-4 
    header.w3-container.w3-teal 
        h1 Aluno #{aluno.id}
    .w3-container
    ul.w3-ul.w3-card-4(style="width:50%")
        li 
            b Nome: 
            span= aluno.nome
        li
            b Número: 
            span= aluno.id
        li
            b GitLink: 
            a(href=aluno.gitlink)= aluno.gitlink
    .w3-container.w3-margin-8 
        ul.w3-ul 
            - for (var i = 1; i <= 8; i++)
                li 
                    b TPC#{i}: 
                    if (aluno["tpc" + i] == 1)
                        span.w3-tag.w3-teal= "Entregue"
                    else
                        span.w3-tag.w3-red= "Não Entregue" 
    footer.w3-container.w3-blue
        address 
            span Generated by EngWeb2024 in #{date} [
            a(href="/alunos") Return
            span ]
    