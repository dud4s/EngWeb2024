extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1 Períodos 
            a.w3-btn.w3-teal(href='/periodos/registo') Adicionar período

        .w3-container 
            table.w3-table-all 
                tr 
                    th ID 
                    th Nome 
                - for (var i = 0; i < periodos.length; i++) 
                    tr 
                        td= periodos[i].id 
                        td= periodos[i].nome
                        td 
                            a.w3-btn.w3-teal(href='/periodos/editar/' + periodos[i].id) Editar 
                            a.w3-btn.w3-teal(href='/periodos/eliminar/' + periodos[i].id) Eliminar
    include footer