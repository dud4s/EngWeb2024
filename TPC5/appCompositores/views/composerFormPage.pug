extends layout 

block content 
    header.w3-container.w3-purple 
        h2 Formulário de Compositor 

    form.w3-container(method="POST")
        fieldset 
            legend Metadata 
            label Nome 
            input.w3-input.w3-round(type="text", name="nome", required)
            label Período
            input.w3-input.w3-round(type="text", name="periodo", required)
            label Biografia
            textarea.w3-input.w3-round(name="bio", required)
            label Data de Nascimento
            input.w3-input.w3-round(type="date", name="dataNasc", required)
            label Data de Morte
            input.w3-input.w3-round(type="date", name="dataMorte", required)
        br
        button.w3-btn.w3-round.w3-purple(type="submit") Registar
    include footer