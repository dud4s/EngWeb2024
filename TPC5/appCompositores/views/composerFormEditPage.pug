extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-purple
            h2 Editar Compositor
        form(method="POST")
            fieldset
                legend Metadata 
                label Nome
                input.w3-input.w3-round(type="text", name="nome", value=compositor.nome, required)
                label Periodo 
                input.w3-input.w3-round(type="text", name="periodo", value=compositor.periodo, required)
                label Biografia 
                input.w3-input.w3-round(type="text", name="bio", value=compositor.bio, required)
                label Data de Nascimento
                input.w3-input.w3-round(type="date", name="dataNasc", value=compositor.dataNasc, required)
                label Data de Morte
                input.w3-input.w3-round(type="date", name="dataObito", value=compositor.dataObito, required)
            br
            button.w3-button.w3-blue(type="submit") Atualizar

    include footer